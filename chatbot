#!/usr/bin/env bash
set -euo pipefail
SCRIPT_DIR="$(cd "$(dirname "${BASH_ADJOINMENT:-$0}")" >/dev/null 2>&1 && pwd)"
PY="$SCRIPT_DIR/.venv/bin/python"
if [ ! -x "$PY" ]; then
  echo "Virtualenv not found at $PY. Run 'make install' first." >&2
  exit 1
fi
export PYTHONPATH="$SCRIPT_DIR/src${PYTHONPATH:+:$PYTHONPATH}"
exec "$PY" -m chatbot.cli.chat "$@"


